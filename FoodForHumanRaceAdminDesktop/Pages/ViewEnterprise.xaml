<Page x:Class="FoodForHumanRaceAdminDesktop.Pages.ViewEnterprise"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FoodForHumanRaceAdminDesktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewEnterprise"
      Background="AliceBlue"
      Name="ViewEnterpriseName">

    <Grid DataContext="{Binding ElementName=ViewEnterpriseName, Path=.}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Enterprise" FontSize="30"></TextBlock>
        <DataGrid Grid.Row="1" Margin="20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id"></DataGridTextColumn>
                <DataGridTextColumn Header="Name"></DataGridTextColumn>
                <DataGridTextColumn Header="Adress"></DataGridTextColumn>
                <DataGridTextColumn Header="Menedger Name"></DataGridTextColumn>
                
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Row="2" Content="ADD"></Button>
    </Grid>
</Page>
